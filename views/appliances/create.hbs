

    <main>
    
        <section id="create-container">
            <div class="create-container-info">
                <h1>Create Announcement</h1>
                <h4>Post your appliances to sell</h4>
                <form method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" placeholder="Вид уред..">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" placeholder="http://...">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" placeholder="...">
                    <label>Description:</label>
                    <textarea id="description" name="description" placeholder="Напиши описание.."></textarea>
                    <label>Payment method:</label>
                    <select id="payment" name="paymentMethod">
                        <option value="credit-card">Credit Card</option>
                        <option value="debit-card">Debit Card</option>
                        <option value="paypal">PayPal</option>
                    </select>
                    <input type="submit" id="btn" value="Създай">
                </form>
            </div>
        </section>
    </main>

